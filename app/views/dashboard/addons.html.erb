<div class="box">
  <h1>
    Addons
    <%= link_to new_addon_path do %>
      <i class="fa fa-plus-circle"></i>
    <% end %>
  </h1>
  <p class="lead">Your orders on one place.</p>
  <p class="text-muted">If you have any questions, please feel free to <a href="contact.html">contact us</a>, our customer addon center is working for you 24/7.</p>
  <hr>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @addons.each do |addon| %>
        <tr>
          <th># <%= addon.id %></th>
          <td><%= addon.name %></td>
          <td><%= addon.description %></td>
          <td><%= addon.price %></td>
          <td><%= addon.stock %></td>
          <td>
            <% if addon.image.attached? %>
              <%= image_tag addon.image.variant(resize: '50x50'), class: 'img-fluid' %>
            <% end %>
          </td>

          <td>
            <%= link_to edit_addon_path(addon) do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to addon_path(addon) do %>
              <i class="fa fa-search-plus"></i>
            <% end %>
            <% if addon.can_destroy? %>
              <%= link_to addon_path(addon), data: { confirm: 'Are you sure?' }, method: :delete do %>
                <i class="fa fa-trash"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
