<div class="card sidebar-menu mb-4">
  <div class="card-header">
    <h3 class="h4 card-title">User section</h3>
  </div>
  <div class="card-body">
    <ul class="nav nav-pills flex-column">
      <a href="<%= listings_path(u: @profile.user_id) %>" class="nav-link <%= active_sidebar('listings') %>">
        <i class="fa fa-list"></i> My listings
      </a>
      <a href="#" class="nav-link <%= active_sidebar('orders') %>">
        <i class="fa fa-shopping-cart"></i> My orders
      </a>
      <% if @profile == current_profile %>
        <a href="<%= profile_path(@profile) %>" class="nav-link <%= active_sidebar('show') %>">
          <i class="fa fa-user"></i> My Account
        </a>
      <% end %>
      <a href="<%= edit_profile_path(@profile) %>" class="nav-link <%= active_sidebar('edit') %>">
        <i class="fa fa-cog"></i> Edit Account
      </a>
    </ul>
  </div>
</div>

<div class="banner">
  <a href="javascript:void(0)">
    <%= image_tag @profile.photo&.variant(resize: '620x410') || 'no_photo.jpg', alt: "#{@profile.full_name} photo", class: 'img-fluid' %>
  </a>
</div>
