<% if notice %>
  <div class="row">
    <div class="offset-2 col-8">
      <div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
<% end %>
