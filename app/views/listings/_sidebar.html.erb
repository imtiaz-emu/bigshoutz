<div class="card sidebar-menu mb-4">
  <div class="card-header">
    <h3 class="h4 card-title">Listings section</h3>
  </div>
  <div class="card-body">
    <ul class="nav nav-pills flex-column">
      <% if %w[index show].include?(params[:action]) %>
        <li>
          <a href="<%= listings_path %>" class="nav-link">Services
            <span class="badge badge-secondary"><%= @services.length %></span>
          </a>
          <ul class="list-unstyled">
            <% @services.each do |service| %>
              <li><a href="<%= listings_path(s: service.id) %>" class="nav-link"><%= service.title %></a></li>
            <% end %>
          </ul>
        </li>
      <% end %>

      <% if %w[new edit].include?(params[:action]) %>
        <li>
          <a href="<%= listings_path(u: current_user.id) %>" class="nav-link">My Listings
            <span class="badge badge-secondary"><%= @services.length %></span>
          </a>
          <ul class="list-unstyled">
            <% @services.each do |service| %>
              <li><a href="<%= listings_path(s: service.id, u: current_user.id) %>" class="nav-link"><%= service.title %></a></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</div>
