<div class="box">
  <h2><%= @addon.new_record? ? 'Create' : 'Update' %> Addon </h2>
  <p class="lead">Change your personal details or your password here.</p>
  <p class="text-muted">Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas.</p>

  <%= form_for @addon do |f| %>
    <%= render 'shared/errors', obj: @addon %>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, autocomplete: 'off', class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, autocomplete: 'off', class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :price %>
          <%= f.text_field :price, autocomplete: 'off', class: 'form-control' %>
        </div>
      </div>
      <!--<div class="col-md-4">-->
        <!--<div class="form-group">-->
          <!--<%#= f.label :currency %>-->
          <!--<%#= f.select :currency, options_for_select(currency_list.map { |c| [c[:name], c[:code]] }, @addon.currency),-->
                       <!--{}, { class: 'form-control' } %>-->
        <!--</div>-->
      <!--</div>-->
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :stock %>
          <%= f.number_field :stock, autocomplete: 'off', class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="form-group">
          <%= f.check_box :is_active %>
          <%= f.label :is_active %>
        </div>
      </div>
    </div>

    <div class="col-md-12 text-center">
      <%= link_to @addon.new_record? ? addons_path : addon_path(@addon), class: 'btn btn-outline-primary' do %>
        <i class="fa fa-close"></i> Cancel
      <% end %>
      <button type="submit" class="btn btn-primary">
        <i class="fa fa-save"></i> Save
      </button>
    </div>
  <% end %>
</div>
