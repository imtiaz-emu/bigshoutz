<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div id="main-slider" class="home-banner">
        <%= image_tag 'banner.jpg' %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-md-12">
    <div class="box slideshow">
      <h3>WHAT IS BIGSHOUTZ?</h3>
      <p class="lead"><b>BIGSHOUTZ</b> is a unique celebrity-fan platform where it connects celebrities and fans through various special services.</p>
    </div>
  </div>
</div>

<div id="advantages">
  <div class="container">
    <div id="blog-homepage" class="row mb-4">
      <% services.sample(4).each do |service| %>
        <div class="col-lg-3 col-md-4">
          <div class="post">
            <h4><a href="<%= listings_path(s: service.id) %>"><%= service.title %></a></h4>
            <hr>
            <p class="intro"><%= service.description %></p>
            <% if service.image.attached? %>
              <%= image_tag service.image.variant(resize: '100x100'), alt: "#{service.title} photo", class: 'img-fluid' %>
            <% else %>
              <i class="fa fa-4x fa-camera-retro"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

